<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plateforme d'enregistrement du personnel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center">Plateforme d'enregistrement du personnel</h1>
        <p class="lead text-center mb-4">Bienvenue, <%= user.name %> !</p>

        <!-- Bouton pour ajouter un personnel -->
        <div class="text-end mb-3">
            <a href="/personnel/add" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Ajouter un personnel
            </a>
        </div>

        <!-- Tableau des personnels -->
        <h2 class="mt-4">Liste des personnels</h2>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prénoms</th>
                    <th>Téléphone</th>
                    <th>Département</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (personnels && personnels.length> 0) { %>
                    <% personnels.forEach((personnel, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= personnel.nom %>
                            </td>
                            <td>
                                <%= personnel.prenoms %>
                            </td>
                            <td>
                                <%= personnel.telephone %>
                            </td>
                            <td>
                                <%= personnel.departement %>
                            </td>
                            <td>
                                <a href="/personnel/edit/<%= personnel._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a href="/personnel/delete/<%= personnel._id %>" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce personnel ?');">
                                    <i class="fas fa-trash"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center">Aucun personnel trouvé</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>

        <!-- Bouton de déconnexion -->
        <div class="text-center mt-4">
            <a href="/users/logout" class="btn btn-danger">
                <i class="fas fa-sign-out-alt"></i> Se déconnecter
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>